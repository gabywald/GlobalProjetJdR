
## naming WITHOUT the extensions [.tex] or [.bib]
LATEXFILEONE=afficheTract1
LATEXFILETWO=afficheTract2
# BIBTEFILE=globalnotes

## the local software...
CCPDFLA=pdflatex
CCLATEX=latex
CCBIBTE=bibtex
CCPDFTE=dvipdf
CCPSTEX=dvips

all : pdflatex

pdf : $(LATEXFILEONE).dvi $(LATEXFILETWO).dvi
	$(CCPDFTE) $(LATEXFILEONE).dvi
	$(CCPDFTE) $(LATEXFILETWO).dvi

ps : $(LATEXFILEONE).dvi $(LATEXFILETWO).dvi
	$(CCPSTEX) $(LATEXFILEONE).dvi
	$(CCPSTEX) $(LATEXFILETWO).dvi

clean : mrproper
	rm $(LATEXFILEONE).log
	rm $(LATEXFILETWO).log
	# rm $(LATEXFILEONE).lot
	# rm $(LATEXFILEONE).lof
	# rm $(LATEXFILEONE).dvi
	# rm $(LATEXFILEONE).pdf

mrproper : $(LATEXFILEONE).aux $(LATEXFILETWO).aux # $(LATEXFILE).bbl $(LATEXFILE).blg $(LATEXFILE).toc
	rm $(LATEXFILEONE).aux
	rm $(LATEXFILETWO).aux
	# rm $(LATEXFILEONE).toc
	# rm $(LATEXFILEONE).bbl
	# rm $(LATEXFILEONE).blg
	

$(LATEXFILEONE).dvi : $(LATEXFILEONE).tex # $(BIBTEFILE).bib
	$(CCLATEX) $(LATEXFILEONE).tex
	# $(CCBIBTE) $(BIBTEFILE)
	$(CCLATEX) $(LATEXFILEONE).tex
	$(CCLATEX) $(LATEXFILEONE).tex
	$(CCLATEX) $(LATEXFILEONE).tex
	
$(LATEXFILETWO).dvi : $(LATEXFILETWO).tex # $(BIBTEFILE).bib
	$(CCLATEX) $(LATEXFILETWO).tex
	# $(CCBIBTE) $(BIBTEFILE)
	$(CCLATEX) $(LATEXFILETWO).tex
	$(CCLATEX) $(LATEXFILETWO).tex
	$(CCLATEX) $(LATEXFILETWO).tex

pdflatex : $(LATEXFILEONE).tex $(LATEXFILETWO).tex # $(BIBTEFILE).bib
	$(CCPDFLA) $(LATEXFILEONE).tex
	# $(CCBIBTE) $(BIBTEFILE)
	$(CCPDFLA) $(LATEXFILEONE).tex
	$(CCPDFLA) $(LATEXFILEONE).tex
	$(CCPDFLA) $(LATEXFILEONE).tex
	$(CCPDFLA) $(LATEXFILETWO).tex
	# $(CCBIBTE) $(BIBTEFILE)
	$(CCPDFLA) $(LATEXFILETWO).tex
	$(CCPDFLA) $(LATEXFILETWO).tex
	$(CCPDFLA) $(LATEXFILETWO).tex

